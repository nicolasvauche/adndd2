{% extends 'base.html.twig' %}

{% block title %}{{ 'default.welcome' | trans | capitalize }}{% endblock %}

{% block body_class %}home{% endblock %}

{% block body %}
    <article>
        <section class="cover">
            <h1>{{ appConfig.getAppTitle() }}</h1>

            <img src="{{ asset('assets/images/logo_adndd_full.png') }}" class="app_logo" alt="{{ appConfig.getAppName() }}" />

            <a href="{{ path('about') }}" class="app_button cta" title="{{ 'pages.about.menu' | trans | capitalize }}">{{ 'pages.about.title' | trans | capitalize }}</a>
        </section>

        <section class="games">
            <div class="app_grid three app_slider xs">
                <div class="app_grid_item app_slider_item">
                    <img src="{{ asset('assets/images/games/cover_add.png') }}" class="app_grid_item_image" alt="Donjons & Dragons" />
                </div>

                <div class="app_grid_item app_slider_item">
                    <img src="{{ asset('assets/images/games/cover_cob.png') }}" class="app_grid_item_image" alt="Chroniques OubliÃ©es" />
                </div>

                <div class="app_grid_item app_slider_item">
                    <img src="{{ asset('assets/images/games/cover_cth.png') }}" class="app_grid_item_image" alt="L'appel de Cthulhu" />
                </div>
            </div>

            <h2>3 jeux disponibles !</h2>

            <a href="{{ path('games') }}" class="app_button cta" title="{{ 'pages.games.menu' | trans | capitalize }}">{{ 'pages.games.title' | trans | capitalize }}</a>
        </section>

        <section class="play">
            <img src="{{ asset('assets/images/home_games.png') }}" alt="{{ appConfig.getAppName() }}" />
            <img src="{{ asset('assets/images/home_dices.png') }}" alt="{{ appConfig.getAppName() }}" />

            <a href="{{ path('play') }}" class="app_button cta" title="{{ 'pages.play.menu' | trans | capitalize }}">{{ 'pages.play.title' | trans | capitalize }}</a>
        </section>
    </article>
{% endblock %}
