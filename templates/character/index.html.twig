{% extends 'base.html.twig' %}

{% block title %}{{ 'pages.user.characters.title' | trans | capitalize }}{% endblock %}
{% block body_class %}characters{% endblock %}

{% block body %}
    <section class="characters">
        <div class="app-grid two">
            <main class="app-grid-item">
                <h1>{{ 'pages.user.characters.title' | trans | capitalize }}</h1>

                <div class="app-grid three">
                    {% for character in characters %}
                        <div class="app-grid-item">
                            <div class="app-grid-item-header">
                                <img src="{{ asset('assets/images/characters/' ~ character.id ~ '.jpg') }}" class="app-grid-item-image" alt="{{ character.name }}" />
                                <h3 class="app-grid-item-title">{{ character.name }}</h3>
                                <h4 class="app-grid-item-category">{{ character.gameName }}</h4>
                            </div>
                            <div class="app-grid-body">
                                <p class="app-grid-excerpt">
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                                </p>
                            </div>
                            <div class="app-grid-item-footer">
                                <a href="#" class="app-button" title="">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" class="app-button" title="">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </main>

            <aside class="app-grid-item">
                <h2>Actions</h2>

                <a href="#" class="app-button cta" title="">Cr√©er</a>
            </aside>
        </div>
    </section>
{% endblock %}
