<div class="characteristic">
    {% for characterCharacteristic in character.characterCharacteristics %}
        {% if characterCharacteristic.characteristic.type == 'Type' %}
            {% if (characterCharacteristic.characteristic.shortname != 'INT') and (characterCharacteristic.characteristic.shortname != 'POU') and (characterCharacteristic.characteristic.shortname != 'DEX') %}
                <div class="app_grid two">
                    <div>
                        <div class="vtitle">
                            {{ characterCharacteristic.characteristic.shortname }}
                        </div>
                        <div class="subtitle">
                            {{ characterCharacteristic.characteristic.name }}
                        </div>
                    </div>
                    <div class="border_title data_case">
                        {{ characterCharacteristic.base }}
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
</div>