<div class="attack app_grid three">
    <div class="htitle">
        Attaque
    </div>
    <div class="htitle">
        Mod.
    </div>
    <div></div>
</div>

{% for characterCharacteristic in character.characterCharacteristics %}
    {% if characterCharacteristic.characteristic.type == 'Attack' %}
        <div class="attack app_grid three">
            <div class="vtitle">
                {{ characterCharacteristic.characteristic.name }}
            </div>
            <div class="border_title data_case">
                {% if (characterCharacteristic.base >= 0) %}
                    +{{ characterCharacteristic.base }}
                {% else %}
                    {{ characterCharacteristic.base }}
                {% endif %}
            </div>
            <div class="border_title data_case"></div>
        </div>
    {% endif %}
{% endfor %}
